{
  "name": "ABC Unified Alloy",
  "icon": "mdi-pickaxe",
  "description": "Creates Custom Alloys, (simmilar to netherite)",
  "category": "fileType.block",
  "targetVersion": [
    ">=",
    "1.17.0"
  ],
  "packTypes": [
    "behaviorPack",
    "resourcePack"
  ],
  "fields": [
    [
      "Your Username",
      "AUTHOR",
      {
        "validate": [
          "required"
        ]
      }
    ],
    [
      "Alloy (Lowercase)",
      "IDENTIFIER",
      {
        "validate": [
          "required",
          "alphanumeric",
          "lowercase"
        ]
      }
    ],
    [
      "Display Name",
      "IDENTIFIER_NAME",
      {
        "validate": [
          "required"
        ]
      }
    ],
    [
      "Explosion Resistance",
      "EXPLOSION_RESISTANCE",
      {
        "type": "numberInput",
        "min": 0,
        "max": 12,
        "step": 1,
        "optional": true
      }
    ],
    [
      "Ingredient A Identifier",
      "INGREDIENT_A",
      {
        "validate": [
          "required",
          "alphanumeric",
          "lowercase"
        ]
      }
    ],
    [
      "Ingredient A Amt",
      "IGREDIENT_A_AMT",
      {
        "type": "numberInput",
        "min": 1,
        "max": 8,
        "step": 1,
        "optional": true
      }
    ],
    [
      "Ingredient B Identifier",
      "INGREDIENT_B",
      {
        "validate": [
          "required",
          "alphanumeric",
          "lowercase"
        ]
      }
    ],
    [
      "Ingredient B Amt",
      "IGREDIENT_B_AMT",
      {
        "type": "numberInput",
        "min": 1,
        "max": 8,
        "step": 1,
        "optional": true
      }
    ],
    [
      "Ingot Count",
      "COUNT",
      {
        "type": "numberInput",
        "min": 1,
        "max": 9,
        "step": 1,
        "optional": true
      }
    ]
  ],
  "createFiles": [
    [
      "crafting_block.json",
      "BP/recipes/{{IDENTIFIER}}/crafting_{{IDENTIFIER}}_block.json",
      {
        "inject": [
          "IDENTIFIER",
          "AUTHOR"
        ]
      }
    ],
    [
      "crafting_block_ingot.json",
      "BP/recipes/{{IDENTIFIER}}/crafting_{{IDENTIFIER}}_block_{{IDENTIFIER}}_ingot.json",
      {
        "inject": [
          "IDENTIFIER",
          "AUTHOR"
        ]
      }
    ],
    
    [
      "crafting_ingot.json",
      "BP/recipes/{{IDENTIFIER}}/crafting_{{IDENTIFIER}}_ingot.json",
      {
        "inject": [
          "IDENTIFIER",
          "AUTHOR",
          "INGREDIENT_A",
          "INGREDIENT_B",
          "INGREDIENT_A_AMT",
          "INGREDIENT_B_AMT",
          "COUNT"
        ]
      }
    ],
    [
      "block.json",
      "BP/blocks/{{IDENTIFIER}}/{{IDENTIFIER}}_block.json",
      {
        "inject": [
          "IDENTIFIER",
          "AUTHOR",
          "EXPLOSION_RESISTANCE"
        ]
      }
    ],
    [
      "ingot.json",
      "BP/items/{{IDENTIFIER}}/{{IDENTIFIER}}_ingot.json",
      {
        "inject": [
          "IDENTIFIER",
          "AUTHOR"
        ]
      }
    ]
  ],
  "expandFiles": [
    [
      "en_US.lang",
      "RP/texts/en_US.lang",
      {
        "inject": [
          "IDENTIFIER",
          "AUTHOR",
          "IDENTIFIER_NAME"
        ]
      }
    ],
    [
      "blocks.json",
      "RP/blocks.json",
      {
        "inject": [
          "IDENTIFIER",
          "AUTHOR"
        ]
      }
    ],
    [
      "terrain_texture.json",
      "RP/textures/terrain_texture.json",
      {
        "inject": [
          "IDENTIFIER",
          "AUTHOR"
        ]
      }
    ],
    [
      "item_texture.json",
      "RP/textures/item_texture.json",
      {
        "inject": [
          "IDENTIFIER",
          "AUTHOR"
        ]
      }
    ]
  ]
}